#JSGF V1.0;
grammar menu_sphinx;
public <rule> = ([<sentence>] (<food> <and> <food> | <bevarage>)) | <noise>;
<sentence> = I want | please;
<food> = instant_noodle | baked_bean | tuna | jelly | nutella | pringles;
<and> = and | with;
<bevarage> = tea | orange_juice | pepsi;
<noise> = a | b | c | d | e | f | g | h | j | k | l | m | n | p | q | r | s | u | v | w | s | y | z | ka | sa | ta | na | ha | ma | ya | ra | wa;
